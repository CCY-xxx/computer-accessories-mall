<%- include ../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%- include ../public/aslideleft.ejs%>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">用户管理
                </li>
                <li class="active" ><a href="/admin/user">用户列表...</a>
                </li>
                <li class="active"><a href="/admin/user/findUser?id=<%=id%>">用户详细信息...</a>
                    </li>
                <li class="active">订单详情
                </li>
            </ol>
           
            <!--
                列表展示
            -->
            <div class="panel-body">
                <div class="table-responsive input-form">
                    <form action="/admin/user/editUser" method="post" enctype="multipart/form-data">
                        <ul>

                            <input type="hidden" name="_id" value="<%=order._id%>" />


                            <li style="font-size:20px;"> 订单号:&nbsp;&nbsp;<%=order.orderId%></li>
                            <li style="font-size:20px;"> 订单总额:&nbsp;&nbsp;<%=order.orderTotal%>元</li>
                            <li style="font-size:20px;"> 订单创建时间:&nbsp;&nbsp; <%=order.createDate%></li>
                            <li style="font-size:20px;"> 订单状态:&nbsp;&nbsp;  
                                 <%if(order.orderStatus=="1"){%>
                               
                                    <a class="btn btn-warning" >已支付</a>
                            
                                  <%}else if(order.orderStatus=="0"){%>
                                 
                                        <a class="btn btn-danger" >未支付</a>
                                 
                                  <%}else if(order.orderStatus=="2"){%>
                              
                                    <a class="btn btn-success" >已发货</a>
                              
                                <%}else if(order.orderStatus=="3"){%>
                                  
                                      <a class="btn btn-primary" >已收货</a>
                                
                                  <%}%></li>
                            <li style="font-size:20px;"> 订单收货地址:&nbsp;&nbsp; 
                                <%=order.addressInfo.province%>
                                <%=order.addressInfo.city%>
                                <%=order.addressInfo.area%>
                                <%=order.addressInfo.streetName%>
                            </li>
                            <li style="font-size:20px;"> 联系电话:&nbsp;&nbsp; <%=order.addressInfo.tel%></li>
                            <li><h4>订单内容:</h4>

                                <div class="table-responsive">
                                    <table class="table table-striped ">
                                        <thead>
                                            <tr>
                                                <th>序号</th>
                                                <th>商品编号</th>
                                                <th>商品图片</th>
                                                <th>商品名</th>
                                                <th>商品价格</th>
                                                <th>商品数量</th>
                                                


                                                <!-- <th class="text-center">操作</th> -->
                                            </tr>
                                        </thead>

                                        <tbody>

                                            <% for(var i=0;i<order.goodsList.length;i++){%>
                                            <tr>
                                                <td><%=i+1%></td>

                                                <td><%=order.goodsList[i].productId%></td>
                                                <td>
                                                        <img  width="100" src="/<%=order.goodsList[i].productImage%>" alt=""/>
                                                </td>
                                                <td><%=order.goodsList[i].title%></td>
                                                <td><%=order.goodsList[i].price%></td>
                                                <td><%=order.goodsList[i].productNum%></td>
                                                
                                                
                                               
                                            </tr>

                                            <%}%>
                                </tbody>
                                </table>
                                </div>
                            </li>

                  


                            <li>
                                <br/>
                                <!-- <div style="float: right">
                                    <h3>订单总额：<span style="font-size: 18px"><%=order.orderTotal%>元</span></h3>&nbsp;&nbsp;
                                </div> -->
                                <!-- <button type="submit" class="btn btn-default">提交</button> -->
                            </li>

                        </ul>


                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

</body>
</html>
