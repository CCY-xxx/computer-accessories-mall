<%- include ../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%- include ../public/aslideleft.ejs%>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">用户管理
                </li>
                <li class="active" ><a href="/admin/user">用户列表...</a>
                    </li>
                <li class="active">用户详细信息
                </li>
            </ol>
            <div class="panel panel-default">

                <div class="panel-heading">
                    修改用户信息
                </div>
            <div style="position: absolute;top:20px;left:450px;opacity: 0;" id="msgId"  class="alert alert-success" role="alert"></div>

                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/user/editUser" method="post" enctype="multipart/form-data">
                            <ul>

                                <input type="hidden" name="_id" value="<%=userDoc._id%>" />


                                <li style="font-size:16px;"> 用户名字: <input disabled type="text" name="userName" value="<%=userDoc.userName%>" /></li>
                                <li style="font-size:16px;"> 用户邮箱: <input disabled type="text" name="userId" value="<%=userDoc.userId%>" /></li>
                                <li style="font-size:16px;"> 用户昵称: <input disabled type="text" name="nickName" value="<%=userDoc.nickName%>" /></li>
                                <li style="font-size:16px;"> 用户年龄: <input disabled type="text" name="age" value="<%=userDoc.age%>" /></li>
                                <li style="font-size:16px;"> 用户性别: <input disabled type="text" name="sex" value="<%=userDoc.sex%>" /></li>
                                <li style="font-size:16px;"> 用户生日: <input disabled type="text" name="birth" value="<%=userDoc.birth%>" /></li>
                                <li style="font-size:16px;"> 用户手机: <input disabled type="text" name="phone" value="<%=userDoc.phone%>" /></li>
                                <li style="font-size:16px;"> 用户备注: <input disabled type="text" name="remark" value="<%=userDoc.remark%>" /></li>
                                <!-- <li style="font-size:16px;"> 用户密码: <input type="text" name="usrPwd" value="<%=userDoc.userPwd%>" /></li> -->
                                <li> <h4>用户订单:</h4>
                                    <div class="table-responsive">
                                        <table class="table table-striped ">
                                            <thead>
                                                <tr>
                                                    <th>编号</th>

                                                    <th>订单号</th>
                                                    <th>订单总额</th>
                                                    <th>创建时间</th>
                                                    <th>订单状态</th>
                                                    <th>操作</th>
                                                   


                                                    <!-- <th class="text-center">操作</th> -->
                                                </tr>
                                            </thead>

                                            <tbody>

                                                <% for(var i=0;i<userDoc.orderList.length;i++){%>
                                                <tr>
                                                    <td><%=i+1%></td>

                                                    <td><%=userDoc.orderList[i].orderId%></td>
                                                    <td><%=userDoc.orderList[i].orderTotal%></td>
                                                    <td><%=userDoc.orderList[i].createDate%></td>
                                                    <%if(userDoc.orderList[i].orderStatus=="1"){%>
                                                    <td>
                                                        <a class="btn btn-warning" >已支付</a>
                                                    </td>
                                                      <%}else if(userDoc.orderList[i].orderStatus=="0"){%>
                                                        <td>
                                                            <a class="btn btn-danger" >未支付</a>
                                                        </td>
                                                      <%}else if(userDoc.orderList[i].orderStatus=="2"){%>
                                                      <td>
                                                        <a class="btn btn-success" >已发货</a>
                                                    </td>
                                                    <%}else if(userDoc.orderList[i].orderStatus=="3"){%>
                                                        <td>
                                                          <a class="btn btn-primary" >已收货</a>
                                                      </td>
                                                      <%}%>
                                                    <td>
                                                        <a href="/admin/user/findUserOrder?orderId=<%=userDoc.orderList[i].orderId%>&&_id=<%=userDoc._id%>"
                                                            class="btn btn-success">查看</a>
                                                        <!-- <a href="/admin/user/sendGoods?orderId=<%=userDoc.orderList[i].orderId%>&&_id=<%=userDoc._id%>&&orderStatus=<%=userDoc.orderList[i].orderStatus%>"
                                                            class="btn btn-success">发货</a> -->
                                                            <%if(userDoc.orderList[i].orderStatus=="1"){%>
                                                                <a href="/admin/user/sendGoods?orderId=<%=userDoc.orderList[i].orderId%>&&_id=<%=userDoc._id%>&&orderStatus=<%=userDoc.orderList[i].orderStatus%>" class="btn btn-danger" ><span onclick="hide()">发货</span></a>
                                                              <%}else{%>
                                                                <a href="/admin/user/sendGoods?orderId=<%=userDoc.orderList[i].orderId%>&&_id=<%=userDoc._id%>&&orderStatus=<%=userDoc.orderList[i].orderStatus%>" class="btn btn-default disabled" ><span>发货</span></a>
                                                              <%}%>
                                                    </td>
                                                </tr>

                                                <%}%>
                                    </tbody>
                                    </table>
                                    </div>
                                </li>

                      


                                <li>
                                    <br/>
                                    <!-- <button type="submit" class="btn btn-default">提交</button> -->
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>


        </div>
    </div>
</div>

</body>
</html>
