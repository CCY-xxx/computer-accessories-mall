<%- include ../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%- include ../public/aslideleft.ejs%>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">评价管理
                </li>
                <li class="active" ><a >评价列表</a>
                    </li>
                <!-- <li class="active">订单列表
                </li> -->
            </ol>
            <div class="panel panel-default">

                <div class="panel-heading">
                    评价列表
                </div>
            <div style="position: absolute;top:20px;left:450px;opacity: 0;" id="msgId"  class="alert alert-success" role="alert"></div>

                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/user/editUser" method="post" enctype="multipart/form-data">
                            <ul>

                               
                                    <div class="table-responsive">
                                        <table class="table table-striped ">
                                            <thead>
                                                <tr>
                                                    <th>编号</th>

                                                   
                                                    <th>评价人</th>
                                                    <th>评论内容</th>
                                                  
                                                    <th>评论时间</th>
                                                    <th>评论类型</th>
                                                    <th>操作</th>
                                                   


                                                    <!-- <th class="text-center">操作</th> -->
                                                </tr>
                                            </thead>
                                            <% for(var i=0;i<list.length;i++){%>
                                                <tr>
                                                    <td><%=i+1%></td>

                                                    <td><%=list[i].userName%></td>
                                                    <td><%=list[i].infoStr%></td>
                                                    <td><%=list[i].createTime%></td>
                                                    <%if(list[i].orther=="1"){%>
                                                        <td>
                                                            <a class="btn btn-warning" >好评</a>
                                                        </td>
                                                          <%}else if(list[i].orther=="2"){%>
                                                            <td>
                                                                <a class="btn btn-danger" >差评</a>
                                                            </td>
                                                            <%}else {%>
                                                                <td>
                                                                    <a class="btn btn-default" >未评价</a>
                                                                </td>
                                                          <%}%>
                                                    <td>
                                                      
                                                        <a href="/admin/product/delEvaluate?id=<%=list[i]._id%>"
                                                            class="btn btn-success">删除</a>
                                                        <a href="/admin/product/evaluateToPei?id=<%=list[i]._id%>"
                                                            class="btn btn-success">查看配件信息</a>
                                                        <a href="/admin/product/evaluateToMan?userName=<%=list[i].userName%>"
                                                            class="btn btn-success">查看评价人信息</a>
                                                      
                                                         
                                                    </td>
                                                </tr>

                                                <%}%>
                                            <tbody>

                                              
                                    </tbody>
                                    </table>
                                    </div>
                                </li>

                      


                                <li>
                                    <br/>
                                    <!-- <button type="submit" class="btn btn-default">提交</button> -->
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>


        </div>
    </div>
</div>

</body>
</html>
